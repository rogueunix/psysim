    script(type="text/javascript", src="/javascripts/lib/dataTables.bootstrap.min.js")
    script(type="text/javascript", src="/javascripts/lib/select2.full.min.js")
    script(type="text/javascript", src="/javascripts/lib/ace.js")
    script(type="text/javascript", src="/javascripts/lib/mode-html.js")
    script(type="text/javascript", src="/javascripts/lib/theme-github.js")
    script(type="text/javascript", src="/javascripts/lib/tinymce/tinymce.min.js")
    // Javascript
    script(type="text/javascript", src="/javascripts/app.js")
    script(type="text/javascript", src="/javascripts/theme.js")
