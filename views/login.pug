doctype html
html
  head
    title PsySim Login
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // Fonts
    link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Roboto+Condensed:300,400') 
    link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Lato:300,400,700,900')
    // CSS Libs
    link(rel='stylesheet', type='text/css', href='/stylesheets/lib/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/lib/font-awesome.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/lib/animate.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/lib/bootstrap-switch.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/lib/checkbox3.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/lib/jquery.dataTables.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/lib/dataTables.bootstrap.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/lib/select2.min.css')
    // CSS App
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/flat-blue.css')

  body.flat-blue.login-page
    .container
      .login-box
        div
          .login-form.row
            .col-sm-12.text-center.login-header
              i.login-logo.fa.fa-user-md.fa-5x
              h4.login-title PsySim
            .col-sm-12
              .login-body
                form
                  .control
                    input.form-control(type="text", placeholder="Username")
                  .control
                    input.form-control(type="password", placeholder="Password")
                  .login-button.text-center
                    input.btn.btn-primary(type="submit")
    // Javascript Libs
    script(type="text/javascript", src="javascripts/lib/jquery.min.js")
    script(type="text/javascript", src="javascripts/lib/bootstrap.min.js")
    script(type="text/javascript", src="javascripts/lib/Chart.min.js")
    script(type="text/javascript", src="javascripts/lib/bootstrap-switch.min.js")
    script(type="text/javascript", src="javascripts/lib/jquery.matchHeight-min.js")
    script(type="text/javascript", src="javascripts/lib/jquery.dataTables.min.js")
    script(type="text/javascript", src="javascripts/lib/dataTables.bootstrap.min.js")
    script(type="text/javascript", src="javascripts/lib/select2.full.min.js")
    script(type="text/javascript", src="javascripts/lib/ace.js")
    script(type="text/javascript", src="javascripts/lib/mode-html.js")
    script(type="text/javascript", src="javascripts/lib/theme-github.js")
    // Javascript
    script(type="text/javascript", src="javascripts/app.js")
    script(type="text/javascript", src="javascripts/theme.js")
